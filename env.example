# ============================================================
# CONFIGURACIÓN PARA DOCKER
# ============================================================
# Estas variables son utilizadas por Docker Compose para
# configurar el contenedor de MySQL

# Configuración de MySQL (solo para Docker)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=cine_db
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password
# Puerto externo que expondrá el contenedor de MySQL al host
# Cambiar si ya tienes MySQL instalado localmente (ej: 3307, 3308)
MYSQL_PORT=3306

# Control de inicialización automática (solo para Docker)
# true: ejecuta scripts SQL en cada reinicio
# false: solo ejecuta scripts en la primera inicialización
INIT_ON_RESTART=true

# ============================================================
# CONFIGURACIÓN DE FLASK
# ============================================================

FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_PORT=5000
SECRET_KEY=dev-secret-key

# ============================================================
# CONFIGURACIÓN DE CONEXIÓN A BASE DE DATOS
# ============================================================
# IMPORTANTE: Las siguientes duplas deben coincidir:
# - (MYSQL_DATABASE, DATABASE_NAME)
# - (MYSQL_USER, DATABASE_USER)
# - (MYSQL_PASSWORD, DATABASE_PASSWORD)

# Host de MySQL
# - Con Docker: usar 'mysql' (nombre del servicio en docker-compose.yml)
# - Sin Docker: usar 'localhost' o '127.0.0.1'
DATABASE_HOST=mysql

# Puerto de MySQL
# - Con Docker: usar 3306 (puerto interno de la red Docker)
# - Sin Docker: usar el puerto de tu instalación local (default: 3306)
DATABASE_PORT=3306

# Nombre de la base de datos (debe coincidir con MYSQL_DATABASE)
DATABASE_NAME=cine_db

# Usuario de la base de datos (debe coincidir con MYSQL_USER)
DATABASE_USER=app_user

# Contraseña del usuario (debe coincidir con MYSQL_PASSWORD)
DATABASE_PASSWORD=app_password
